<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppItuDevelopers.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="textoCentralizado" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="TextColor" Value="Accent" />
            </Style>

            <Style x:Key="textoCentralizadoRoxo" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="TextColor" Value="#672d7a" />
            </Style>

            <Style x:Key="botaoRoxo" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#672d7a"/>
                <Setter Property="TextColor" Value="#FFF"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>